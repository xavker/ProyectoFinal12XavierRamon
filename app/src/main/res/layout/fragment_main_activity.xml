<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xavker.proyectofinal12xavierramon.MainActivityFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.facebook.login.widget.ProfilePictureView
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:id="@+id/profilePicture1"
        android:layout_centerInParent="true"
        />

    <TextView
        android:text="@string/secion_no_iniciada"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profilePicture1"
        android:layout_centerHorizontal="true"
        android:id="@+id/textdetails"
        android:textStyle="normal|bold"></TextView>

    <com.facebook.login.widget.LoginButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:layout_marginTop="29dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
